{
    "manifest_version": 3,

    "name": "PSDLE",
    "short_name": "__MSG_appName__",
    "description": "__MSG_appDesc__",
    "default_locale": "en",
    "homepage_url": "https://repod.github.io/psdle",

    "version": "4.2.0",

    "action": {
        "default_icon": "icons/icon32.png",
        "default_title": "__MSG_pageActionRun__",
        "default_popup": "popup.html"
    },
    "permissions": [],
    "content_scripts": [
        {
          "matches": ["https://store.playstation.com/*"],
          "all_frames": true,
          "js": ["js/chrome.js"],
          "world": "MAIN"
        },
        {
          "matches": ["https://transact.playstation.com/*"],
          "all_frames": true,
          "js": ["js/chrome.js","js/psdle.valkyrie.js"],
          "world": "MAIN"
        },
        {
          "matches": ["https://library.playstation.com/*"],
          "all_frames": true,
          "js": ["js/chrome.js","js/psdle.gotham.js"],
          "world": "MAIN"
        }
    ],
    "icons": {
        "16": "icons/icon32.png",
        "48": "icons/icon64.png",
        "128": "icons/icon128.png"
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "{90d4b3e6-6c8a-46a4-87c7-3bf30d6fa325}",
        "strict_min_version": "109.0"
      }
    }
}
